<resources xmlns:tools="http://schemas.android.com/tools">
<style name="Theme" parent="Theme.AppCompat.Light">
    <item name="android:textColor">#ffffff</item>
    <item name="android:background">@color/mw_black</item>
    <item name="android:buttonStyle">@style/FitBtnStyle</item>
    <item name="android:textViewStyle">@style/DefaultFontSizeStyle</item>
</style>
<style name = "FitBtnStyle">
    <item name="android:textAlignment">center</item>
    <item name="android:textColor">@color/white</item>
    <item name="android:gravity">center</item>
    <item name="android:background">@color/mw_black</item>
    <item name="android:textSize">20dp</item>
    <item name="background">@drawable/background</item>
</style>
<style name="DefaultFontSizeStyle">
    <item name="android:textSize">30dp</item>
</style>
</resources>
